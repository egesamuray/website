extra_js: /js/contact.js
---
<h1>Contact</h1>
<p>Email: <a href="mailto:{{ person.email }}" target="_blank" rel="noopener" class="external">{{ person.email }}</a></p>
<form id="contact-form" action="mailto:{{ person.email }}" method="POST">
  <label for="name">Name</label><br>
  <input type="text" id="name" name="name" required><br>
  <label for="email">Email</label><br>
  <input type="email" id="email" name="email" required><br>
  <label for="message">Message</label><br>
  <textarea id="message" name="message" rows="5" required></textarea>
  <input type="text" id="website" name="website" style="display:none">
  <button type="submit">Send</button>
</form>
<ul>
  <li><a href="{{ person.profiles.scholar }}" target="_blank" rel="noopener" class="external">Google Scholar</a></li>
  <li><a href="{{ person.profiles.linkedin }}" target="_blank" rel="noopener" class="external">LinkedIn</a></li>
</ul>
